<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		xmlns:android = "http://schemas.android.com/apk/res/android"
        id          = "sardinia.app"
        versionCode = "30"
        version     = "1.2.3">

    <preference name="phonegap-version" value="cli-9.0.0" />
 
    <name>Tharros info Sardegna</name>
	<platform name="android">
		<icon src="resources/android/icon.png" />
		<splash src="resources/android/splash.png" />
	</platform>
	<platform name="ios">
		<icon src="resources/ios/sardinia.png" />
		<icon src="resources/ios/icon-60@3x.png" width="180" height="180" />
		<!-- iPhone -->
		<icon src="resources/ios/icon-60@2x.png" width="120" height="120" />
		<!-- iPad -->
		<icon src="resources/ios/icon-76.png" width="76" height="76" />
        <icon src="resources/ios/icon-76@2x.png" width="152" height="152" />
		<splash src="resources/ios/Default~iphone.png" width="320" height="480"/>
		<splash src="resources/ios/Default@2x~iphone.png" width="640" height="960"/>
		<splash src="resources/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
		<splash src="resources/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
		<splash src="resources/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
		<splash src="resources/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
		<splash src="resources/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
		<splash src="resources/ios/Default-667h.png" width="750" height="1334"/>
		<splash src="resources/ios/Default-736h.png" width="1242" height="2208"/>
		<splash src="resources/ios/Default@2x~universal~anyany.png" />
	 </platform>
 
    <description>
        Discover Sardinia by Tharrosinfo
    </description>
 
    <author href="https://www.tharros.info/" email="webmaster@tharros.info">
        Timbert Kriek
    </author>
	
	<access origin="*://phonegap.com/*" subdomains="true" />
	<access origin="*://*.tharros.info/*" subdomains="true" />
	<access origin="*://*.googleapis.com/*" subdomains="true" />
	<access origin="*://*.gstatic.com/*" subdomains="true" />
	<access origin="*://*.google.com/*" subdomains="true" />
	<access origin="*://*.googleusercontent.com/*" subdomains="true" />

	<gap:platform name="android" />
	<gap:platform name="ios" />

	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
	<preference name="exit-on-suspend" value="true" />
	<platform name="ios" >
		<preference name="StatusBarOverlaysWebView" value="false" />
		<preference name="StatusBarBackgroundColor" value="#000000" />
		<preference name="SplashScreen" value="splash" />
	</platform>
	
	<plugin name="cordova-plugin-statusbar" source="npm" />
	<plugin name="cordova-plugin-keyboard" source="npm" />
	<plugin name="cordova-plugin-whitelist" source="npm" />
	<plugin name="cordova-plugin-device" source="npm" />
	<plugin name="cordova-plugin-file" source="npm" />
	<plugin name="cordova-plugin-geolocation" source="npm" />
	<plugin name="cordova-plugin-network-information" source="npm" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" />
	
 
</widget>