<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "sardinia.app"
        versionCode = "10"
        version     = "0.1.0">

    <preference name="phonegap-version" value="3.6.3" />
 
    <name>Tharros info Sardegna</name>
    <icon src="img/favicon.png" />
 
    <description>
        Discover Sardinia by Tharrosinfo
    </description>
 
    <author href="http://www.tharros.info/" email="webmaster@tharros.info">
        Timbert Kriek
    </author>
	
	<access origin="*://phonegap.com/*" subdomains="true" />
	<access origin="*://www.tharros.info/*" subdomains="true" />
	<access origin="*://*.googleapis.com/*" subdomains="true" />
	<access origin="*://*.gstatic.com/*" subdomains="true" />
	<access origin="*://*.google.com/*" subdomains="true" />
	<access origin="*://*.googleusercontent.com/*" subdomains="true" />

	<gap:platform name="android" />

	<preference name="android-minSdkVersion" value="10" />
	
	<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
 	<gap:plugin name="org.apache.cordova.file" version="1.3.1" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
	<gap:plugin name="org.apache.cordova.media" version="0.2.8" />
	<gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.console" version="0.2.11" />
	<gap:plugin name="org.li8.inappbrowser" version="0.1" />
	
 
</widget>